name: backup.verify
on:
  workflow_dispatch:
  schedule:
    - cron: "17 2 * * *"
jobs:
  verify:
    runs-on: ubuntu-latest
    steps:
      - uses: actions/checkout@v4
      - uses: actions/setup-node@v4
        with:
          node-version: '20.x'
      - name: Prepare artifacts dir
        run: mkdir -p artifacts/backups
      - name: Run verifier
        run: node scripts/backup.verify.mjs --out artifacts/backups
      - name: Upload reports
        uses: actions/upload-artifact@v4
        with:
          name: backup-verify
          path: |
            artifacts/backups/verify.json
            artifacts/backups/verify.html
