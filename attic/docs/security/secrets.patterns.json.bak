{
  "version": "1.0.0",
  "rules": [
    { "id": "stripe_live", "desc": "Stripe live secret", "pattern": "\\bsk_live_[A-Za-z0-9]{16,}\\b" },
    { "id": "stripe_test", "desc": "Stripe test secret", "pattern": "\\bsk_test_[A-Za-z0-9]{16,}\\b" },
    { "id": "github_pat", "desc": "GitHub personal access token", "pattern": "\\bghp_[A-Za-z0-9]{36,}\\b" },
    { "id": "google_api", "desc": "Google API key", "pattern": "\\bAIza[0-9A-Za-z\\-_]{35}\\b" },
    { "id": "slack_token", "desc": "Slack bot/user token", "pattern": "\\bxox[baprs]-[A-Za-z0-9-]{10,}\\b" },
    { "id": "aws_access_key", "desc": "AWS access key id", "pattern": "\\bAKIA[0-9A-Z]{16}\\b" },
    { "id": "webhook_secret_like", "desc": "Webhook secret-like key", "pattern": "\\bwhsec_[A-Za-z0-9]{16,}\\b" },
    { "id": "jwt_token", "desc": "JWT-like token", "pattern": "\\beyJ[A-Za-z0-9_-]+\\.[A-Za-z0-9_-]+\\.[A-Za-z0-9_-]{10,}\\b" },
    { "id": "pem_private", "desc": "PEM private key header", "pattern": "-----BEGIN (?:RSA |EC |OPENSSH )?PRIVATE KEY-----" },
    { "id": "dotenv_file", "desc": ".env file committed", "filename": "^\\.env(\\..+)?$" }
  ]
}
