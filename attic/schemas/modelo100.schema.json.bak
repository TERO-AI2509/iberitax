{
  "$schema": "https://json-schema.org/draft/2020-12/schema",
  "$id": "https://schemas.iberitax.local/modelo100.schema.json",
  "title": "Modelo100",
  "type": "object",
  "properties": {
    "taxYear": { "type": "integer", "minimum": 2000 },
    "taxpayer": {
      "type": "object",
      "properties": {
        "nif": { "type": "string", "pattern": "^[A-Z0-9]{8,10}$" },
        "fullName": { "type": "string", "minLength": 3 },
        "residencyStatus": { "type": "string", "enum": ["resident", "non_resident"] }
      },
      "required": ["nif", "fullName", "residencyStatus"],
      "additionalProperties": false
    },
    "spouse": {
      "type": "object",
      "properties": {
        "nif": { "type": "string" },
        "fullName": { "type": "string" }
      },
      "required": [],
      "additionalProperties": false
    },
    "incomes": {
      "type": "array",
      "items": {
        "type": "object",
        "properties": {
          "category": { "type": "string", "enum": ["employment", "self_employment", "capital", "property", "other"] },
          "gross": { "type": "number", "minimum": 0 },
          "withheld": { "type": "number", "minimum": 0 }
        },
        "required": ["category", "gross"],
        "additionalProperties": false
      },
      "default": []
    },
    "deductions": {
      "type": "array",
      "items": {
        "type": "object",
        "properties": {
          "code": { "type": "string" },
          "description": { "type": "string" },
          "amount": { "type": "number", "minimum": 0 }
        },
        "required": ["code", "amount"],
        "additionalProperties": false
      },
      "default": []
    },
    "totals": {
      "type": "object",
      "properties": {
        "taxableBase": { "type": "number", "minimum": 0 },
        "calculatedTax": { "type": "number", "minimum": 0 },
        "finalTaxDue": { "type": "number" }
      },
      "required": ["taxableBase"],
      "additionalProperties": false
    }
  },
  "required": ["taxYear", "taxpayer", "incomes", "totals"],
  "additionalProperties": false
}
