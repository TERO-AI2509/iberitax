name: Repo Cleanup Scan
on:
  schedule:
    - cron: "13 5 * * *"
  workflow_dispatch:
jobs:
  scan:
    runs-on: ubuntu-latest
    steps:
      - uses: actions/checkout@v4
        with: { fetch-depth: 0 }
      - uses: actions/setup-node@v4
        with: { node-version: '20' }
      - run: npm ci || true
      - run: NODE_NO_WARNINGS=1 node scripts/repo.cleanup.scan.mjs
      - name: Upload cleanup report
        uses: actions/upload-artifact@v4
        with:
          name: cleanup-report
          path: artifacts/modelo100/cleanup.report.json
      - name: Job Summary
        shell: bash
        run: |
          echo "## Repo Cleanup Report" >> "$GITHUB_STEP_SUMMARY"
          jq -r '"Candidates: \(.total)"' artifacts/modelo100/cleanup.report.json >> "$GITHUB_STEP_SUMMARY"
