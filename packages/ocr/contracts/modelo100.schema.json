{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "$id": "https://tero.ai/contracts/modelo100.schema.json",
  "title": "Modelo100Extract",
  "type": "object",
  "required": ["taxYear", "taxpayerId", "docType", "source", "items"],
  "properties": {
    "taxYear": { "type": "integer", "minimum": 2000, "maximum": 2100 },
    "taxpayerId": { "type": "string", "minLength": 3 },
    "docType": { "type": "string", "enum": ["bank_interest", "dividend", "nomina", "withholding", "rental_income"] },
    "source": {
      "type": "object",
      "required": ["fileName"],
      "properties": {
        "fileName": { "type": "string", "minLength": 1 },
        "pageCount": { "type": "integer", "minimum": 1 }
      },
      "additionalProperties": false
    },
    "currency": { "type": "string", "const": "EUR" },
    "items": {
      "type": "array",
      "minItems": 1,
      "items": {
        "type": "object",
        "required": ["type", "amountEUR"],
        "properties": {
          "type": { "type": "string", "enum": ["interest", "dividend", "salary", "withholding", "rent"] },
          "amountEUR": { "type": "number" },
          "description": { "type": "string" },
          "dateISO": { "type": "string", "format": "date" },
          "payer": { "type": "string" }
        },
        "additionalProperties": false
      }
    }
  },
  "additionalProperties": false
}
