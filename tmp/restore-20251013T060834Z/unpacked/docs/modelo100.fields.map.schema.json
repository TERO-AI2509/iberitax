{
  "$schema": "https://json-schema.org/draft/2020-12/schema",
  "title": "Modelo 100 Field Mapping Schema (MVP)",
  "type": "object",
  "required": ["version", "model", "fields"],
  "properties": {
    "version": { "type": "string" },
    "model": { "type": "string", "const": "modelo100" },
    "notes": { "type": "string" },
    "fields": {
      "type": "array",
      "items": {
        "type": "object",
        "required": ["id", "label", "target", "sources"],
        "properties": {
          "id": { "type": "string", "pattern": "^[a-zA-Z0-9_.-]+$" },
          "label": { "type": "string" },
          "target": {
            "type": "object",
            "required": ["json_key", "csv_col"],
            "properties": {
              "json_key": { "type": "string" },
              "csv_col":  { "type": "string" },
              "decimals": { "type": "integer", "minimum": 0, "maximum": 6 },
              "round":    { "type": "string", "enum": ["half-up", "down", "up"] }
            },
            "additionalProperties": false
          },
          "combine": { "type": "string", "enum": ["first", "sum", "max", "min"] },
          "sources": {
            "type": "array",
            "minItems": 1,
            "items": {
              "type": "object",
              "required": ["ref"],
              "properties": {
                "ref": { "type": "string" },
                "multiplier": { "type": "number" },
                "when": {
                  "type": "array",
                  "items": {
                    "type": "object",
                    "required": ["left", "op", "right"],
                    "properties": {
                      "left":  { "type": "string" },
                      "op":    { "type": "string", "enum": ["=", "!=", ">", "<", ">=", "<=", "in", "not-in", "truthy"] },
                      "right": {}
                    },
                    "additionalProperties": false
                  }
                },
                "rule_hint": { "type": "string" }
              },
              "additionalProperties": false
            }
          },
          "explain": { "type": "string" },
          "tags": { "type": "array", "items": { "type": "string" } }
        },
        "additionalProperties": false
      }
    }
  },
  "additionalProperties": false
}
