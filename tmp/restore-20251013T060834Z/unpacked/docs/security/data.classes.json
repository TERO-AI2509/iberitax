{
  "version": "1.0.0",
  "classes": [
    {
      "id": "PUBLIC",
      "description": "Non-sensitive content safe for open sharing.",
      "retention_days": 3650,
      "example_fields": ["build.status.badge", "changelog.summary"],
      "pii": false
    },
    {
      "id": "INTERNAL",
      "description": "Operational data without personal data; internal-only.",
      "retention_days": 365,
      "example_fields": ["job.runtime.ms", "rule.engine.metrics"],
      "pii": false
    },
    {
      "id": "PII",
      "description": "Personal Data (GDPR Art. 4) that identifies a person.",
      "retention_days": 90,
      "example_fields": ["name", "email", "phone", "address"],
      "pii": true,
      "gdpr_basis_note": "Requires lawful basis; minimize, redact in logs/artifacts."
    },
    {
      "id": "SENSITIVE_PII",
      "description": "Higher-risk identifiers or financials.",
      "retention_days": 30,
      "example_fields": ["national_id", "tax_id", "iban", "card_last4"],
      "pii": true,
      "gdpr_basis_note": "Strict need-to-know; aggressive redaction."
    },
    {
      "id": "CONFIDENTIAL",
      "description": "Company confidential but not personal (keys, secrets, tokens).",
      "retention_days": 0,
      "example_fields": ["api_key", "webhook_secret", "jwt_secret"],
      "pii": false
    }
  ],
  "default_class": "INTERNAL"
}
