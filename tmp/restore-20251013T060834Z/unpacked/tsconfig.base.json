{
  "compilerOptions": {
    "target": "ES2022",
    "module": "ESNext",
    "moduleResolution": "Bundler",
    "strict": true,
    "resolveJsonModule": true,
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "skipLibCheck": true,
    "declaration": true,
    "outDir": "dist",
    "baseUrl": ".",
    "paths": {
      "@iberitax/extractor": [
        "packages/extractor/src/index.ts"
      ],
      "@iberitax/extractor/*": [
        "packages/extractor/src/*"
      ]
    }
  }
}