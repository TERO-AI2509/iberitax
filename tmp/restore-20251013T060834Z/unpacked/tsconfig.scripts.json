{
  "extends": "./tsconfig.base.json",
  "compilerOptions": {
    "outDir": "dist-scripts",
    "module": "NodeNext",
    "target": "ES2020",
    "moduleResolution": "NodeNext",
    "esModuleInterop": true,
    "strict": true,
    "skipLibCheck": true,
    "resolveJsonModule": true,
    "types": ["node"],
    "lib": ["ES2020", "DOM"]
  },
  "include": ["demos/**/*.ts", "packages/clients/src/**/*.ts"]
}
